<?xml version="1.0" encoding="utf-8"?>
<!-- Widget 3x2: Visibility score + cloud cover + Kp + last update -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widget_background"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Row 1: Label + cloud cover -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Aurora"
            android:textColor="@color/widget_text_secondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_cloud_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="â˜ --%"
            android:textColor="@color/widget_text_secondary"
            android:textSize="12sp" />
    </RelativeLayout>

    <!-- Row 2: Big visibility score (centered, fills middle) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_visibility_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/widget_text"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_score_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_visibility_label"
            android:textColor="@color/widget_text_secondary"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- Row 3: Kp + last update -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_kp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Kp --"
            android:textColor="@color/widget_text_secondary"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_last_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="--:--"
            android:textColor="@color/widget_text_secondary"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>
